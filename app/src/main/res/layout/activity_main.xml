<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="20dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:text="My Location"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUZAFFARPUR"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="70sp" />
        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostly Cloudy"
            android:layout_marginTop="1dp"
            android:textColor="@color/white"
            android:textSize="25dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H:30째"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L:22째"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bgbox"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5-DAY FORECAST"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:textColor="@color/white"/>

                    <LinearLayout
                        android:background="#80FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:itemCount="5"
                        tools:listitem="@layout/weather_item" />
                </LinearLayout>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"

                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/darkcard"
                        app:cardCornerRadius="20dp"
                        android:layout_marginRight="4dp"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"

                        android:layout_width="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/cloudsun"/>
                            <TextView
                                android:layout_marginLeft="8dp"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="HUMIDITY"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/valHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="35sp"/>
                        <TextView
                            android:layout_gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginLeft="8dp"
                            android:text="Amount of moisture\nin the air."/>

                    </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/darkcard"
                        app:cardCornerRadius="20dp"
                        android:layout_marginRight="4dp"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/cloudsun"/>
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="PRESSURE"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/valPressure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1,013"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="35sp"/>
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:text="hPa"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/darkcard"
                        app:cardCornerRadius="20dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"

                            android:layout_width="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/cloudsun"/>
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="FEELS LIKE"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/feellike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22째"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/darkcard"
                        app:cardCornerRadius="20dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/cloudsun"/>
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="VISIBILITY"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/visibility"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="14KM"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="30sp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/darkcard"
                        app:cardCornerRadius="20dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"

                            android:layout_width="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/cloudsun"/>
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="SUNRISE"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/valSunrise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5:10AM"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/darkcard"
                        app:cardCornerRadius="20dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/cloudsun"/>
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="SUNSET"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/valSunset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6:10PM"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:textSize="30sp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/darkcard"
                        app:cardCornerRadius="20dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"

                            android:layout_width="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/cloudsun"/>
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="RAIN VOLUME"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/valRain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0mm"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/darkcard"
                        app:cardCornerRadius="20dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/cloudsun"/>
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="CLOUDINESS"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/valCloudiness"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20%"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="30sp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/darkcard"
                    app:cardCornerRadius="20dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    app:cardElevation="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/cloudsun"/>
                            <TextView
                                android:textColor="@color/white"
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="WIND"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/valWindSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.2 m/s Speed"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="30sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wind Gust: 5.2"
                            android:layout_marginLeft="6dp"
                            android:textSize="15sp"
                            android:id="@+id/windGust"
                            android:textColor="@color/white"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white"/>
                        <TextView
                            android:id="@+id/valWindDeg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120째 Direction"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="30sp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</RelativeLayout>